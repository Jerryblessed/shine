{% extends 'layout.html.jinja' %}

{% block head %}
<!-- Head block is intentionally left empty for this template -->
{% endblock head %}

{% block body %}
<div class="w-fit mx-auto text-center mt-16 text-lg">
  <!-- Display a message indicating the user should fill the form again -->
  <h1>{{translations.csrfError.description}}</h1>
  <!-- Display the reason for filling the form again (supplied by the 'reason' variable) -->
  <p>{{translations.csrfError.reason}}: {{ reason }}</p>
</div>
{% endblock body %}